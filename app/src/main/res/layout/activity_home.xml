<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:background="#8BBDF7">

    <Button
        android:text="View Trips"
        android:id="@+id/locationsButton"
        android:onClick="invokeLocations"

        android:textColor="#FFFFFF"
        android:textSize="25sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#191919"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:layout_marginBottom="109dp"
        android:layout_height="200px"
        android:layout_alignBottom="@+id/map"
        android:layout_alignStart="@+id/map"
        android:layout_width="500px" />

    <Button
        android:text="Find a New Trip"
        android:id="@+id/map"
        android:onClick="invokeMap"

        android:textColor="#FFFFFF"
        android:textSize="25sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#191919"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:layout_marginBottom="66dp"
        android:layout_height="200px"
        android:layout_width="500px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
