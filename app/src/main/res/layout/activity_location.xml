<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gilliam.marlon.com.travel_planner.Location">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/textview1"
            android:layout_above="@+id/editLatitude"
            android:layout_alignStart="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLocation"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/editDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:id="@+id/textView"
            android:layout_below="@+id/editLongitude"
            android:layout_alignEnd="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editDescription"
            android:layout_below="@+id/editLongitude"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/textView2"
            android:layout_above="@+id/editLongitude"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLatitude"
            android:layout_below="@+id/editLocation"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/textView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/editLongitude"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLongitude"
            android:layout_below="@+id/editLatitude"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/editDescription" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/saveData"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:textColor="#FFFFFF"
        android:textSize="14sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#191919"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateData"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:textColor="#FFFFFF"
        android:textSize="14sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#191919"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"/>

</RelativeLayout>
